                    <div x-on:click="toggle" class="xl:hidden"><Button secondary icon="fa-bars">Menu</Button> </div>
                </div>
            <ButtonGroup pr>
                <Button link secondary grouped iconOnly icon="fa-sun" />
                <Button link secondary grouped iconOnly icon="fa-text-size" />
            </ButtonGroup>    
        </div>
        
        
        </div>
        <Nav style="desktop"  />        
